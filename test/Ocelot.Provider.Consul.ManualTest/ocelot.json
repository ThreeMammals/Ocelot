{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/posts/{postId}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/posts/{postId}",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "product",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}
